<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>View Products</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
  <style>
    body { background-color: #fcfde7; }
    .custom-navbar { background-color: #f9e5ea; }
    .product-card {
      background: white; border: 1px solid #d4af37; border-radius: 10px;
      box-shadow: 0 4px 8px rgba(212, 175, 55, 0.2);
      padding: 20px; transition: transform 0.3s ease; text-align: center; height: 100%;
    }
    .product-card:hover { transform: translateY(-5px); box-shadow: 0 8px 16px rgba(212, 175, 55, 0.3); }
    .product-image {
      width: 100%; height: 250px; object-fit: cover; border-radius: 10px; margin-bottom: 15px;
    }
    .filter-btn {
      margin: 0 10px; background-color: #d4af37; border: none; padding: 8px 16px;
      border-radius: 5px; color: white; font-weight: bold; cursor: pointer;
    }
    .filter-btn:hover { background-color: #c59c2f; }
  </style>
</head>

<body>
  
<nav class="navbar navbar-expand-lg custom-navbar mb-4">
  <div class="container d-flex">
    <a class="navbar-brand" href="#">
      <img src="/images/WhatsApp Image 2025-04-28 at 23.50.36_74b5c99d.jpg" alt="Aarani" width="70" height="58">
    </a>
    <div class="dropdown ms-auto" href="/">
      <button class="btn btn-secondary" type="button">
        <a href="/" class="btn btn-secondary ms-auto">Add Products</a>
      </button>
    </div>
  </div>
</nav>

<div class="container">
  <% if (success.length>0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <% if (error.length>0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  <h1 class="text-center mb-5" style="color: #d4af37;">Our Collections</h1>

  <div class="text-center mb-4 flex">
    <a class="btn btn-warning" href="/products/All">All</a>
    <a class="btn btn-warning" href="/products/Sarees">Sarees</a>
    <a class="btn btn-warning" href="/products/Bags">Bags</a>
  </div>

  <div class="row g-4" id="productsList">
    <% products.reverse().forEach(function(product, index){ %>
      <div class="col-lg-3 col-md-4 col-sm-6 product-item d-flex" data-category="<%= product.category %>">
        <div class="h-100 w-100 d-flex flex-column justify-content-between">
        <div class="product-card">
          <img class="product-image" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
          <div class="product-name">Name: <%= product.name %></div>
          <div class="product-details">Details: <%= product.Description %></div>
          <div class="product-category">Type: <%= product.type %></div>
          <div class="product-originalprice">Actual Price: <%= product.Actual_Price %></div>
          <div class="product-sp">Selling Price: <%= product.Selling_Price %></div>
          <div class="product-discount">Discount: <%= product.Discount_Percentage %> %</div>
          <div class="product-discount">Discounted Price: <%= product.Selling_Price-((product.Discount_Percentage/100) * product.Selling_Price)%></div>

          <!-- Trigger Button -->
          <button class="btn btn-warning" data-bs-toggle="collapse" data-bs-target="#editForm<%= index %>">Edit</button>
          <a href="/product/delete/<%= product._id %>" class="btn btn-danger">Delete</a>

<!-- COLLAPSIBLE FORM -->
<div class="collapse mt-3" id="editForm<%= index %>">
  <form action="/product/update/<%= product._id %>" method="POST" enctype="multipart/form-data">
    <div class="product-card">          
      <input type="text" name="name" class="form-control mb-2" value="<%= product.name %>" required>
      <textarea name="Description" class="form-control mb-2"><%= product.Description %></textarea>
      <input type="text" name="type" class="form-control mb-2" value="<%= product.type %>">
      <input type="number" name="Actual_Price" class="form-control mb-2" value="<%= product.Actual_Price %>">
      <input type="number" name="Selling_Price" class="form-control mb-2" value="<%= product.Selling_Price %>">
      <input type="number" name="Discount_Percentage" class="form-control mb-2" value="<%= product.Discount_Percentage %>">
      <input type="file" name="image" class="form-control mb-2">
      
      <button type="submit" class="btn btn-success">Save</button>
    </div>
  </form>
</div>

      </div>
      </div>
    </div>
    <% }) %>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
<script>
  function filterProducts(category) {
    const items = document.querySelectorAll('.product-item');
    items.forEach(item => {
      if (category === 'all' || item.getAttribute('data-category') === category) {
        item.style.display = 'block';
      } else {
        item.style.display = 'none';
      }
    });
  }
</script>

</body>
</html>
